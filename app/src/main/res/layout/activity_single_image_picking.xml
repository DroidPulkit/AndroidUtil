<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kawnayeen.androidutilexample.SingleImagePicking">

    <Button
        android:id="@+id/pickImageBitmap"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:text="Pick Image Bitmap"
        android:textSize="18sp" />

    <Button
        android:id="@+id/pickImageFile"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:text="Pick Image File"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/pickedImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/imageFileInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Path : x, Size: y"
        android:textAlignment="center"
        android:textSize="14sp"
        android:visibility="gone" />
</LinearLayout>
